@section scripts {
    <script type="text/javascript">
        $(function () {


            $.getJSON("../Home/GetTweets", function (res) {
                const x = res.map(tweet => "<tr><td>" + tweet + "</td><tr>").reduce((acc, next) => acc + next);
                const table = "<table class='table table-striped'>" + x + "</table>"
                $("#twitterRows").html(table).addClass('animated flip');;

            });



        });
    </script>


    <script src="~/js/home.js"></script>
